<% include partials/header %>
<div class="container">
<header class="jumbotron">
<div class="container">
<h1>Welcome to cars page</h1> 
<p><a class="btn btn-primary btn-large" href="/cars/new">add new car</a></p>   
</div>
</header>
<div class="row mycls text-center">
    <% car.forEach(function(cars){ %>
   <div class="card" style="width: 22rem;margin:10px;padding: 5px;">
   

   <img src="<%= cars.image %>" class="card-img-top img-fluid " style="width: 350px; height: 220px;">
   <div class="card-body">
       <div><h3 class="card-title"><%= cars.name %></h3></div>
   
   </div>
   <p><a href="/cars/<%= cars._id %>" class="btn btn-primary" > More info </a></p>
</div>    
 <% }) %>
 </div>

<% include partials/footer %>
</div> 